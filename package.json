{
	"name": "alexa-skills",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"client": "cd client && yarn start",
		"server": "nodemon server.js --ignore client",
		"dev": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\"",
		"dev:server": "cd client && yarn build && cd .. && yarn start",
		"start": "node server.js",
		"heroku-postbuild": "cd client && npm install && npm install --only=dev --no-shrinkwrap && npm run build"
	},
	"dependencies": {
		"body-parser": "^1.19.0",
		"client": "./client/",
		"express": "^4.17.1",
		"http-proxy-middleware": "^0.19.1"
	},
	"devDependencies": {
		"concurrently": "^4.1.0",
		"nodemon": "^1.19.1"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/esausilva/alexa-skills.git"
	},
	"bugs": {
		"url": "https://github.com/fernand0aguilar/alexa-skills/issues"
	},
	"keywords": [
		"node",
		"express",
		"create-react-app"
	]
}
